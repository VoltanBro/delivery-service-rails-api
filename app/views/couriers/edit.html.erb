<h1>Edit Courier</h1>
 
<%= form_with(model: @courier, local: true) do |form| %>
    
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back to list', couriers_path %>